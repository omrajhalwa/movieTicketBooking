<%layout("/layouts/boilerplate")%>

  <div class="card row mt-3 mb-5">
    <div class="col-8 offset-2">
    <h2>SignUp on Wanderlust</h2>
    <form action="/signup" method="POST" class="row g-3 needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">UserName</label>
      <input type="text" value="" name="signup[username]" class="form-control" required>
      <div class="invalid-feedback">
        Please choose a title.
      </div>
      
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
      <input type="text" value="" name="signup[email]" class="form-control" required>
      <div class="invalid-feedback">
        Please choose a title.
      </div>
      
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" value="" name="signup[password]" class="form-control" required>
      <div class="invalid-feedback">
        Please choose a title.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="mb-3">
      <button class="btn btn-primary" type="submit">SignUp</button>
    </div>

   

</div>
</div>